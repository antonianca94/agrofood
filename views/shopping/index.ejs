<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    
    <link href="/public/css/bootstrap.css" rel="stylesheet" />
    <link href="/public/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="/public/css/agrofood.css" rel="stylesheet" />
</head>

<body class="orders_page">

    <%- include('../header', { user: user }) %>
    <div class="main-content d-xxl-flex d-xl-flex d-lg-flex"> 
        <%- include('../sidebar', { pageType: 'Compras', userRole }) %>
        <div class="container-fluid mt-5 mb-5 m-xxl-4 m-xl-4 m-lg-4 m-md-4 m-sm-4">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="mb-0">
                            <i class="bi bi-bag-check c-orange me-2"></i> Minhas Compras
                        </h4>
                        <!-- <a href="/meus-pedidos" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-list-ul me-1"></i> Ver Todos os Pedidos
                        </a> -->
                    </div>

                    <% if (ordersByVendor && Object.keys(ordersByVendor).length > 0) { %>
                        <!-- Loop pelos vendedores -->
                        <% Object.keys(ordersByVendor).forEach(vendorName => { %>
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">
                                        <i class="bi bi-shop me-2 c-orange"></i> 
                                        <%= vendorName %>
                                        <span class="badge bg-secondary ms-2">
                                            <%= ordersByVendor[vendorName].length %> compra<%= ordersByVendor[vendorName].length > 1 ? 's' : '' %>
                                        </span>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Loop pelos pedidos do vendedor -->
                                    <% ordersByVendor[vendorName].forEach((order, index) => { %>
                                        <div class="row align-items-center p-4 <%= index < ordersByVendor[vendorName].length - 1 ? 'border-bottom' : '' %>">
                                            <div class="col-md-2 text-center">
                                                <i class="bi bi-receipt fs-2 c-orange"></i>
                                                <p class="mb-0 mt-2"><small class="text-muted">Compra</small></p>
                                                <strong style="font-size: 0.85rem;">#<%= order.order_number %></strong>
                                            </div>
                                            <div class="col-md-2">
                                                <p class="mb-1"><small class="text-muted">Data</small></p>
                                                <strong style="font-size: 0.9rem;"><%= order.createdAtFormatted %></strong>
                                            </div>
                                            <div class="col-md-2">
                                                <p class="mb-1"><small class="text-muted">Total</small></p>
                                                <strong class="c-orange" style="font-size: 0.9rem;"><%= order.totalFormatted %></strong>
                                            </div>
                                            <div class="col-md-2">
                                                <p class="mb-1"><small class="text-muted">Pagamento</small></p>
                                                <% 
                                                let paymentIcon = 'credit-card';
                                                let paymentText = 'Cartão';
                                                switch(order.payment_method) {
                                                    case 'pix':
                                                        paymentIcon = 'qr-code';
                                                        paymentText = 'PIX';
                                                        break;
                                                    case 'boleto':
                                                        paymentIcon = 'upc-scan';
                                                        paymentText = 'Boleto';
                                                        break;
                                                    case 'credit_card':
                                                        paymentIcon = 'credit-card-2-front';
                                                        paymentText = 'Crédito';
                                                        break;
                                                    case 'debit_card':
                                                        paymentIcon = 'credit-card';
                                                        paymentText = 'Débito';
                                                        break;
                                                }
                                                %>
                                                <i class="bi bi-<%= paymentIcon %> me-1"></i>
                                                <span style="font-size: 0.85rem;"><%= paymentText %></span>
                                            </div>
                                            <div class="col-md-2">
                                                <p class="mb-1"><small class="text-muted">Status</small></p>
                                                <% 
                                                let badgeClass = 'bg-secondary';
                                                switch(order.status) {
                                                    case 'pending':
                                                        badgeClass = 'bg-warning text-dark';
                                                        break;
                                                    case 'processing':
                                                        badgeClass = 'bg-info';
                                                        break;
                                                    case 'shipped':
                                                        badgeClass = 'bg-primary';
                                                        break;
                                                    case 'delivered':
                                                        badgeClass = 'bg-success';
                                                        break;
                                                    case 'cancelled':
                                                        badgeClass = 'bg-danger';
                                                        break;
                                                }
                                                %>
                                                <span class="badge <%= badgeClass %>" style="font-size: 0.75rem;"><%= order.statusFormatted %></span>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <a href="/compra/<%= order.id %>" class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-eye me-1"></i> Ver
                                                </a>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                            <h5>Você ainda não realizou nenhuma compra</h5>
                            <p class="mb-3">Explore nossos produtos e faça sua primeira compra!</p>
                            <a href="/" class="btn btn-primary">
                                <i class="bi bi-shop me-2"></i> Ver Produtos
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
            <!-- FOOTER -->
            <div class="footer">
                <%- include('../footer') %>
            </div>
            <!-- FOOTER -->
        </div>
    </div>
</body>
</html>
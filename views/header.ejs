<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <!-- CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">

    
    <!-- CSS -->

    <style>

        @import url('https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Inter:wght@200;300;400;500;600;700;800;900&display=swap');

        body {
            /* display: flex;
            flex-direction: column; */
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            background: #f1f1f1;
        }

        .main-content {
            /* display: flex; */
            margin-top: 1rem;
            
        }
        .content-section{
            box-shadow: 0 1px 5px 1px rgb(0 0 0 / 10%) !important;
        }

        /* .container {
            flex: 1;
        } */

        .footer {
            width: 100%;
            bottom: 0;
            left: 0;
            text-align: center;
            font-size: 0.8rem;
        }
        .product-filter, .product-filter input, #tabelaProdutos, #tabelaRole, #tabelaCategory {
            font-size: 0.9rem !important;
        }
        .product-new{
            font-size: 0.74rem !important;
        }
        .btn-primary {
            color: #fff;
            background-color: #d96900;
            border-color: #d96900;
        }
        .btn-primary:hover {
            color: #fff;
            background-color: #d96900;
            border-color: #d96900;
        }

        .nav-pills .nav-link.active, .nav-pills .show>.nav-link {
            background-color: #d96900;

        }
        a {
            color: #d96900;
        }
        .c-orange {
            color: #d96900
        }
        .b-orange {
            background-color: #d96900
        }
        .sidebar{
            box-shadow: 0 1px 5px 1px rgb(0 0 0 / 10%) !important;
        }
        .sidebar a {
            font-size: 0.95rem;
        }

        .sidebar .nav-link {
            color: #adadad !important;
        }
        .sidebar .nav-link.active {
            color: #ffffff !important;
        }
        .sidebar .nav-link:hover {
            color: #d96900 !important;
        }
        .sidebar .nav-link.active:hover {
            color: #ffffff !important;
        }
        ul.welcome li a {
            font-size: .8rem;

        }

    </style>
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Poac</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <!-- <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Produtos</a>
                    </li>
                </ul> -->
                <!-- Dropdown menu para "Bem-vindo" -->
                <ul class="navbar-nav ml-auto welcome">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Bem-vindo, <%= username %>
                        </a>
                        <!-- Adicione a classe 'dropdown-menu-right' para alinhar à direita -->
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <!-- Opção de logout -->
                            <a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right mr-2 c-orange"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
</header>

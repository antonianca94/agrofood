<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <!-- CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">

    
    <!-- CSS -->

    <style>

        @import url('https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Inter:wght@200;300;400;500;600;700;800;900&display=swap');

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            background: #f1f1f1;
        }

        .main-content {
            display: flex;
            margin-top: 1rem;
        }

        .container {
            flex: 1;
        }

        .footer {
            width: 100%;
            background-color: #f5f5f5;
            /* position: fixed; */
            bottom: 0;
            left: 0;
            text-align: center;
            font-size: 0.9rem;
        }
        .product-filter, .product-filter input, #tabelaProdutos {
            font-size: 0.9rem !important;
        }
        .product-new{
            font-size: 0.74rem !important;
        }
        .btn-primary {
            color: #fff;
            background-color: #d96900;
            border-color: #d96900;
        }
        .btn-primary:hover {
            color: #fff;
            background-color: #d96900;
            border-color: #d96900;
        }

        .nav-pills .nav-link.active, .nav-pills .show>.nav-link {
            background-color: #d96900;

        }
        a {
            color: #d96900;
        }

        .sidebar a {
            font-size: 0.95rem;
        }

    </style>
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Anne Marketplace</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/products">Produtos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

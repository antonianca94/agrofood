<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <script>
        function excluirProduto(productId) {
            // if (confirm("Tem certeza de que deseja excluir este produto?")) {
                fetch(`/products/${productId}`, {
                        method: 'DELETE'
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Erro ao excluir o produto');
                        }
                        return response.json();
                    })
                    .then(data => {
                        location.reload();
                    })
                    .catch(error => {
                        console.error('Erro:', error);
                        alert('Erro ao excluir o produto');
                    });
            // }
        }

        function filtrarPorNome() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("filtroNome");
            filter = input.value.toUpperCase();
            table = document.getElementById("tabelaProdutos");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0]; // índice 0 corresponde à coluna do nome
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
</head>
<body class="">
    <%- include('../header') %>
    <div class="main-content"> 
        <%- include('../sidebar') %>
        <div class="container bg-white p-4 mb-5 bg-body rounded m-4">

            <% if (successMessage.length > 0) { %>
            <div class="alert alert-success mt-4" role="alert">
                <%= successMessage[0] %>
            </div>
            <% } %>

            <div class="d-flex justify-content-start align-items-center mb-4">
                <h1 class=""><%= pageTitle %></h1>
                <a href="/products/new" class="btn btn-primary btn-sm ml-3"> <i class="bi bi-pencil-square"></i> Novo Produto</a>
            </div>

            <!-- Campo de filtro por nome -->
            <div class="mb-3">
                <label for="filtroNome" class="form-label">Filtrar por Nome:</label>
                <input type="text" class="form-control" id="filtroNome" onkeyup="filtrarPorNome()" placeholder="Digite o nome do produto">
            </div>

            <table id="tabelaProdutos" class="table">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Preço</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td>
                            <!-- Ícone de exclusão -->
                            <a href="#" class="text-danger" onclick="excluirProduto('<%= product.id %>')">
                                <i class="bi bi-x-circle"></i>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- FOOTER -->
    <div class="footer">
        <%- include('../footer') %>
    </div>
    <!-- FOOTER -->
</body>
</html>

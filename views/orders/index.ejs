<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    
    <link href="/public/css/bootstrap.css" rel="stylesheet" />
    <link href="/public/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="/public/css/agrofood.css" rel="stylesheet" />
</head>

<body class="vendor_orders_page">

    <%- include('../header', { user: user }) %>
    <div class="main-content d-xxl-flex d-xl-flex d-lg-flex"> 
        <%- include('../sidebar', { pageType: 'Vendas', userRole }) %>
        <div class="container-fluid mt-5 mb-5 m-xxl-4 m-xl-4 m-lg-4 m-md-4 m-sm-4">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="mb-0">
                            <i class="bi bi-cart-check c-orange me-2"></i> Vendas Recebidas
                        </h4>
                        <div class="d-flex gap-2">
                            <select class="form-select form-select-sm" id="filterStatus" style="width: auto;">
                                <option value="">Todos os Status</option>
                                <option value="pending">Pendente</option>
                                <option value="processing">Processando</option>
                                <option value="shipped">Enviado</option>
                                <option value="delivered">Entregue</option>
                                <option value="cancelled">Cancelado</option>
                            </select>
                        </div>
                    </div>

                    <!-- Estatísticas Rápidas -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-hourglass-split fs-2 c-orange"></i>
                                    <h5 class="mt-2 mb-0">
                                        <%= orders.filter(o => o.status === 'pending').length %>
                                    </h5>
                                    <small class="text-muted">Pendentes</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-gear-fill fs-2 text-info"></i>
                                    <h5 class="mt-2 mb-0">
                                        <%= orders.filter(o => o.status === 'processing').length %>
                                    </h5>
                                    <small class="text-muted">Processando</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-truck fs-2 text-primary"></i>
                                    <h5 class="mt-2 mb-0">
                                        <%= orders.filter(o => o.status === 'shipped').length %>
                                    </h5>
                                    <small class="text-muted">Enviados</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center p-3">
                                <div class="card-body">
                                    <i class="bi bi-check-circle-fill fs-2 text-success"></i>
                                    <h5 class="mt-2 mb-0">
                                        <%= orders.filter(o => o.status === 'delivered').length %>
                                    </h5>
                                    <small class="text-muted">Entregues</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (orders && orders.length > 0) { %>
                        <div class="card">
                            <div class="card-body">
                                <!-- Lista de Pedidos -->
                                <% orders.forEach((order, index) => { %>
                                    <div class="order-row row align-items-center p-4 <%= index < orders.length - 1 ? 'border-bottom' : '' %>" data-status="<%= order.status %>">
                                        <div class="col-md-2 text-center">
                                            <i class="bi bi-receipt fs-2 c-orange"></i>
                                            <p class="mb-0 mt-2"><small class="text-muted">Venda</small></p>
                                            <strong style="font-size: 0.85rem;">#<%= order.order_number %></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="mb-1"><small class="text-muted">Data</small></p>
                                            <strong style="font-size: 0.9rem;"><%= order.createdAtFormatted %></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="mb-1"><small class="text-muted">Cliente</small></p>
                                            <strong style="font-size: 0.9rem;">
                                                <i class="bi bi-person-circle me-1"></i>
                                                <%= order.buyer_name || 'Cliente' %>
                                            </strong>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="mb-1"><small class="text-muted">Total</small></p>
                                            <strong class="c-orange" style="font-size: 0.9rem;"><%= order.totalFormatted %></strong>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="mb-1"><small class="text-muted">Pagamento</small></p>
                                            <% 
                                            let paymentIcon = 'credit-card';
                                            let paymentText = 'Cartão';
                                            switch(order.payment_method) {
                                                case 'pix':
                                                    paymentIcon = 'qr-code';
                                                    paymentText = 'PIX';
                                                    break;
                                                case 'boleto':
                                                    paymentIcon = 'upc-scan';
                                                    paymentText = 'Boleto';
                                                    break;
                                                case 'credit_card':
                                                    paymentIcon = 'credit-card-2-front';
                                                    paymentText = 'Crédito';
                                                    break;
                                                case 'debit_card':
                                                    paymentIcon = 'credit-card';
                                                    paymentText = 'Débito';
                                                    break;
                                            }
                                            %>
                                            <i class="bi bi-<%= paymentIcon %> me-1"></i>
                                            <span style="font-size: 0.85rem;"><%= paymentText %></span>
                                        </div>
                                        <div class="col-md-2">
                                            <p class="mb-1"><small class="text-muted">Status</small></p>
                                            <% 
                                            let badgeClass = 'bg-secondary';
                                            switch(order.status) {
                                                case 'pending':
                                                    badgeClass = 'bg-warning text-dark';
                                                    break;
                                                case 'processing':
                                                    badgeClass = 'bg-info';
                                                    break;
                                                case 'shipped':
                                                    badgeClass = 'bg-primary';
                                                    break;
                                                case 'delivered':
                                                    badgeClass = 'bg-success';
                                                    break;
                                                case 'cancelled':
                                                    badgeClass = 'bg-danger';
                                                    break;
                                            }
                                            %>
                                            <span class="badge <%= badgeClass %>" style="font-size: 0.75rem;"><%= order.statusFormatted %></span>
                                        </div>
                                        <div class="col-md-12 mt-3 text-end">
                                            <a href="/venda/<%= order.id %>" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye me-1"></i> Ver Detalhes
                                            </a>
                                            
                                            <% if (order.status === 'pending') { %>
                                                <button class="btn btn-outline-success btn-sm" onclick="updateStatus('<%= order.id %>', 'processing')">
                                                    <i class="bi bi-check-circle me-1"></i> Aceitar
                                                </button>
                                            <% } %>
                                            
                                            <% if (order.status === 'processing') { %>
                                                <button class="btn btn-outline-primary btn-sm" onclick="updateStatus('<%= order.id %>', 'shipped')">
                                                    <i class="bi bi-truck me-1"></i> Marcar como Enviado
                                                </button>
                                            <% } %>
                                            
                                            <% if (order.status === 'shipped') { %>
                                                <button class="btn btn-outline-success btn-sm" onclick="updateStatus('<%= order.id %>', 'delivered')">
                                                    <i class="bi bi-check-circle-fill me-1"></i> Marcar como Entregue
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info text-center">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            <h5>Nenhum pedido recebido ainda</h5>
                            <p class="mb-0">Quando clientes comprarem seus produtos, os pedidos aparecerão aqui.</p>
                        </div>
                    <% } %>
                </div>
            </div>
            <!-- FOOTER -->
            <div class="footer">
                <%- include('../footer') %>
            </div>
            <!-- FOOTER -->
        </div>
    </div>

    <script>
        // Filtro de status
        document.getElementById('filterStatus').addEventListener('change', function() {
            const selectedStatus = this.value;
            const orderRows = document.querySelectorAll('.order-row');
            
            orderRows.forEach(row => {
                if (selectedStatus === '' || row.dataset.status === selectedStatus) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Atualizar status do pedido
        function updateStatus(orderId, newStatus) {
            if (!confirm('Deseja realmente atualizar o status deste pedido?')) {
                return;
            }

            fetch(`/venda/${orderId}/status`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status: newStatus })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Status atualizado com sucesso!');
                    window.location.reload();
                } else {
                    alert('Erro ao atualizar status: ' + (data.error || 'Tente novamente'));
                }
            })
            .catch(error => {
                console.error('Erro:', error);
                alert('Erro ao atualizar status');
            });
        }
    </script>

</body>
</html>